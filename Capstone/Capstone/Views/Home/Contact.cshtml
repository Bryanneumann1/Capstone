<div id="googleMap" style="width:100%;height:700px;"></div>
<script>
    function myMap() {

            latLng = new google.maps.LatLng(45.226143, -90.193775)
            var mapOptions = {
                center: latLng,
                zoom: 16,
                mapTypeId: google.maps.MapTypeId.HYBRID
            };
            var map = new google.maps.Map(document.getElementById('googleMap'), mapOptions);

            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(45.222303, -90.196108),
                map : map,
                title: "Whisky Falls Lodge! 2976 County Road M Medford, WI 54470",
                icon: 'http://maps.google.com/mapfiles/ms/icons/orange-dot.png',
                visible: true
            });
            marker.setMap(map);
        }
   

</script>

